%header.jumbotron.jumbotron-general
  .container
    %h1.jumbotron-h1
    %p
      = image_tag 'logo.png', class: 'img-responsive center', alt: '新歓MiX'
.under-jumbotron
.container.index
  %h2.title
    Circles
    %span.circle-num
      842 circles
  %hr.title
  .search
    .name-search.col-xs-12
      %h6 サークル名で検索
      .form-horizontal
        = form_tag('/search') do
          .col-xs-9
            = text_field_tag :search, "", class: 'form-control', name: 'keyword', placeholder: 'サークル名'
          .col-xs-3
            = submit_tag 'search', class: 'btn btn-primary'
  .circle-list
    %h3 Results
    = render partial: 'circle', collection: @circles