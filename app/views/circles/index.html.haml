%header.jumbotron.jumbotron-general
  .container
    %h1.jumbotron-h1
    %p
      .jumbo-title
        %h1 Circle
        %hr
        %p.lead.jumbo
          Academic Hobby Art
          %br
          Music Sports Others
.under-jumbotron
.container.index
  .row
    %h3.title
      Circle Search
    %hr.title
    .search
      .name-search.col-xs-12
        %h6 サークル名で検索
        .form-horizontal
          = form_tag('circles/search') do
            .col-xs-9
              = text_field_tag :search, "", class: 'form-control', name: 'keyword', placeholder: 'サークル名'
            .col-xs-3
              = submit_tag 'search', class: 'btn btn-primary'
      .genre-search.col-xs-12
        %h6 サークルジャンルで検索
        .lg-genre-list.col-xs-12
          %ul.nav.nav-tabs.col-xs-12.col-md-11
            %li.lg-genre.active.academic-li
              = link_to '#academic',  data: { toggle: 'tab' }, aria: { expanded: false} do
                %i.glyphicon.glyphicon-education
            %li.lg-genre
              = link_to '#hobby', data: { toggle: 'tab' }, aria: { expanded: false} do
                %i.glyphicon.glyphicon-send
            %li.lg-genre
              = link_to '#art', data: { toggle: 'tab' }, aria: { expanded: false} do
                %i.glyphicon.glyphicon-picture
            %li.lg-genre
              = link_to '#music', data: { toggle: 'tab' }, aria: { expanded: false} do
                %i.glyphicon.glyphicon-music
            %li.lg-genre
              = link_to '#sports', data: { toggle: 'tab' }, aria: { expanded: false} do
                %i.glyphicon.glyphicon-fire
            %li.lg-genre
              = link_to '#others', data: { toggle: 'tab' }, aria: { expanded: false} do
                %i.glyphicon.glyphicon-th-list
          #myTabContent.tab-content.col-xs-11
            .tab-pane.fade.active.in#academic
              - @circle_genres.academic.each do |genre|
                = link_to circle_genre_path(id: genre.id) do
                  .genre-list.index.col-lg-4.col-sm-6
                    .genre-radio.index-genre-radio
                      %span
                        %i.glyphicon.glyphicon-menu-right
                    .genre-label
                      = genre.name
            .tab-pane.fade#hobby
              - @circle_genres.hobby.each do |genre|
                = link_to circle_genre_path(id: genre.id) do
                  .genre-list.index.col-lg-4.col-sm-6
                    .genre-radio.index-genre-radio
                      %span
                        %i.glyphicon.glyphicon-menu-right
                    .genre-label
                      = genre.name
            .tab-pane.fade#art
              - @circle_genres.art.each do |genre|
                = link_to circle_genre_path(id: genre.id) do
                  .genre-list.index.col-lg-4.col-sm-6
                    .genre-radio.index-genre-radio
                      %span
                        %i.glyphicon.glyphicon-menu-right
                    .genre-label
                      = genre.name
            .tab-pane.fade#music
              - @circle_genres.music.each do |genre|
                = link_to circle_genre_path(id: genre.id) do
                  .genre-list.index.col-lg-4.col-sm-6
                    .genre-radio.index-genre-radio
                      %span
                        %i.glyphicon.glyphicon-menu-right
                    .genre-label
                      = genre.name
            .tab-pane.fade#sports
              - @circle_genres.sports.each do |genre|
                = link_to circle_genre_path(id: genre.id) do
                  .genre-list.index.col-lg-4.col-sm-6
                    .genre-radio.index-genre-radio
                      %span
                        %i.glyphicon.glyphicon-menu-right
                    .genre-label
                      = genre.name
            .tab-pane.fade#others
              - @circle_genres.others.each do |genre|
                = link_to circle_genre_path(id: genre.id) do
                  .genre-list.index.col-lg-4.col-sm-6
                    .genre-radio.index-genre-radio
                      %span
                        %i.glyphicon.glyphicon-menu-right
                    .genre-label
                      = genre.name
    .circle-list
      %h3.list-title
        Circle Lists
        %span.circle-num
          = Circle.where.not(status: 0).length
          circles
      %hr
      = render partial: 'circle', collection: @circles
      .col-xs-12.paginate
        = paginate @circles